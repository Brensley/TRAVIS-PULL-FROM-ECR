version: 1
task_definition:
  task_execution_role: ecsTaskExecutionRole
  ecs_network_mode: awsvpc
  task_size:
    mem_limit_mib: 512
    cpu_limit: 256
  run_params:
    network_configuration:
      awsvpc_configuration:
        subnets:
          - subnet-88d37ef3
        security_groups:
          - sg-b7b1e6de
        assign_public_ip: ENABLED
  container_definitions:
    - name: hello-world
      image: 0647269089792.dkr.ecr.us-east-1.amazonaws.com/20221230155505-a9bb04859d25c483d39afee2e24a02bebed3ff6a:latest
      portMappings:
        - containerPort: 80
          hostPort: 80
      memory: 128
      cpu: 128